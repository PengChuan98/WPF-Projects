<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/QuickUI;component/Themes/Styles/Base/BaseLabel.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style
        x:Key="DefaultLabel"
        BasedOn="{StaticResource BaseLabelStyle}"
        TargetType="Label">
        <Setter Property="BorderBrush" Value="#605e60" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Background" Value="#c9c9c9" />
        <Setter Property="Foreground" Value="black" />
    </Style>

    <Style
        x:Key="InfoLabel"
        BasedOn="{StaticResource DefaultLabel}"
        TargetType="Label">
        <Setter Property="Background" Value="#00bdd5" />
        <Setter Property="Foreground" Value="#efefef" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>

</ResourceDictionary>