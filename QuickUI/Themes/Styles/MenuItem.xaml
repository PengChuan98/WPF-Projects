<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="clr-namespace:QuickUI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/QuickUI;component/Themes/Styles/Base/BaseMenuItemStyle.xaml" />
        <ResourceDictionary Source="pack://application:,,,/QuickUI;component/Themes/Styles/Base/BaseMenuStyle.xaml" />
    </ResourceDictionary.MergedDictionaries>


    <Style BasedOn="{StaticResource BaseMenuStyle}" TargetType="Menu" />

    <Style BasedOn="{StaticResource BaseBlankMenuItemStyle}" TargetType="control:RecentMenuItem" />

    <Style BasedOn="{StaticResource BaseMenuItemStyle}" TargetType="{x:Type MenuItem}" />

    <Style
        x:Key="SettingMenuItem"
        BasedOn="{StaticResource BaseMenuItemStyle}"
        TargetType="MenuItem" />

    <Style
        x:Key="PureSettingMenuItem"
        BasedOn="{StaticResource BaseMenuItemStyle}"
        TargetType="MenuItem" />
</ResourceDictionary>